{
  "include": ["src"],
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "declaration": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist", "babel.config.js", "jest.config.js"]
}
