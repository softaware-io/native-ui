{
  "name": "@softaware/native-ui",
  "version": "0.2.3",
  "description": "React Native components library focused on usability and developer experience",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "lint": "eslint \"./src/**/*.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"./src/**/*.{js,ts,jsx,tsx}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run prettier && npm run lint",
    "release": "standard-version"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "ui-kit",
    "library",
    "frontend",
    "design",
    "native"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softaware-io/native-ui.git"
  },
  "author": "Ivan Dimitrov <i.dimitrov@softaware.io>",
  "license": "GPL-3.0",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.68.2"
  },
  "dependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@react-native-picker/picker": "^2.4.0",
    "react-native-modal": "^13.0.1",
    "react-native-progress": "^5.0.0",
    "react-native-reanimated": "^2.8.0",
    "react-native-responsive-screen": "^1.4.2"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.1.0",
    "@types/react": "^17.0.21",
    "@types/react-native": "^0.68.2",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "standard-version": "^9.3.2",
    "typescript": "^4.7.4"
  }
}
